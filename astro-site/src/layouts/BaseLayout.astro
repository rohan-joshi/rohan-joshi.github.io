---
import '../styles/global.css';

interface Props {
  title: string;
  activeNav?: string;
}

const { title, activeNav } = Astro.props;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/frankl', label: 'Frankl' },
  { href: '/emerson', label: 'Emerson' },
  { href: '/poli', label: 'Poli' },
  { href: '/momdad', label: 'Mom&Dad' },
  { href: '/spring', label: 'Spring' },
  { href: '/people', label: 'People' },
  { href: '/photos/2022', label: '2022' },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-stone-50 text-gray-600 font-mono antialiased">
    <!-- Sidebar Navigation -->
    <div class="fixed left-0 top-0 h-full w-60 bg-stone-50 border-r border-stone-200 p-8">
      <div class="mb-10">
        <h2 class="text-xl font-normal text-gray-800">Rohan</h2>
      </div>
      <nav>
        <ul class="space-y-1">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  "block px-2 py-1.5 transition-opacity duration-200",
                  activeNav === item.label
                    ? "text-gray-800 font-medium"
                    : "text-gray-500 hover:text-gray-700 hover:opacity-70"
                ]}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <!-- Main Content Area -->
    <div class="ml-60 min-h-screen bg-stone-50">
      <main class="max-w-3xl mx-auto px-8 py-12">
        <slot />
      </main>
    </div>
  </body>
</html>
