  ga('send', 'pageview');
</script>

<style>
  .essay-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .essay-content :global(ul) {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .essay-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .essay-content :global(a) {
    color: #57534e;
    text-decoration: underline;
    text-decoration-color: #d6d3d1;
    text-underline-offset: 2px;
    transition: all 0.2s ease;
  }

  .essay-content :global(a:hover) {
    color: #1c1917;
    text-decoration-color: #78716c;
  }

  .essay-content :global(em) {
    font-style: italic;
  }

  .essay-content :global(strong) {
    font-weight: 500;
    color: #44403c;
  }
</style>
